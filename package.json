{
  "name": "email-forwarding-service",
  "version": "1.0.0",
  "description": "Production-grade service to accept Gmail forwarding confirmation requests",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run clean && tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "dev:watch": "nodemon --exec ts-node src/index.ts",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "docker:build": "docker build -t email-forwarding-service .",
    "docker:run": "docker run -p 3000:3000 email-forwarding-service",
    "compose:up": "docker-compose up --build",
    "compose:down": "docker-compose down",
    "healthcheck": "curl -f http://localhost:3000/health || exit 1"
  },
  "dependencies": {
    "express": "^4.18.2",
    "puppeteer": "^24.10.2",
    "winston": "^3.11.0",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.1.5",
    "joi": "^17.11.0",
    "compression": "^1.7.4",
    "express-validator": "^7.0.1",
    "prom-client": "^15.1.0",
    "dotenv": "^16.3.1",
    "express-slow-down": "^2.0.1",
    "express-mongo-sanitize": "^2.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/jest": "^29.5.8",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/supertest": "^2.0.16",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^7.0.0",
    "nodemon": "^3.0.2",
    "eslint": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "prettier": "^3.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "email",
    "forwarding",
    "gmail",
    "automation",
    "puppeteer",
    "typescript",
    "express"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/email-forwarding-service.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}